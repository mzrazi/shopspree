<div class="container">
        <div class="row">
            <div class="col-md-12">
                 <table class="table table-dark mt-5">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">name and address</th>
      <th scope="col">Total Amount</th>
      <th scope="col">Status</th>
      <th scope="col">Payment method</th>
      <th scope="col">status</th>
      <th></th>
      
    </tr>
  </thead>
  <tbody>
     {{#each orders}}
